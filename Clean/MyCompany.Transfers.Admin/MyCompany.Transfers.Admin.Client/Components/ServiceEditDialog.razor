@using MudBlazor
@using MyCompany.Transfers.Admin.Client.Models
@using MyCompany.Transfers.Admin.Client.Services
@inject IServicesApiService Api
@inject IProvidersApiService ProvidersApi
@inject IAccountDefinitionsApiService AccountDefinitionsApi
@inject IParametersApiService ParametersApi
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <div class="service-edit-dialog-content" style="max-width: 100%; overflow-x: hidden;">
            <style>
                .service-edit-dialog-content { max-width: 100%; overflow-x: hidden; }
                .service-edit-dialog-content .service-param-select .mud-input-slot,
                .service-edit-dialog-content .service-param-select .mud-input-control { overflow: hidden; text-overflow: ellipsis; min-width: 0; }
                .service-edit-dialog-content .service-param-select .mud-input-slot > div { overflow: hidden; text-overflow: ellipsis; }
            </style>
            <EditForm Model="_model" OnValidSubmit="Submit">
                <MudGrid Spacing="3" Style="max-width: 100%; overflow-x: hidden;">
                @if (!_isCreate)
                {
                    <MudItem xs="12" md="5"><MudText Typo="Typo.body2" Class="d-flex align-center" Style="height: 56px;">Id</MudText></MudItem>
                    <MudItem xs="12" md="7">
                        <MudTextField Value="_model.Id" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                }
                else
                {
                    <MudItem xs="12"><MudAlert Severity="Severity.Info" Dense="true">Id присваивается на сервере (9-значное число), если не указан.</MudAlert></MudItem>
                }

                <MudItem xs="12" md="5"><MudText Typo="Typo.body2" Class="d-flex align-center" Style="height: 56px;">Провайдер <span class="text-error">*</span></MudText></MudItem>
                <MudItem xs="12" md="7">
                    <MudSelect T="string" @bind-Value="_model.ProviderId" Variant="Variant.Outlined" Label="Провайдер" Required="@_isCreate" RequiredError="Выберите провайдера">
                        @foreach (var p in _providers)
                        {
                            <MudSelectItem T="string" Value="@p.Id">@(p.Name ?? p.Id)</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" md="5"><MudText Typo="Typo.body2" Class="d-flex align-center" Style="height: 56px;">Определение счёта (код) <span class="text-error">*</span></MudText></MudItem>
                <MudItem xs="12" md="7">
                    <MudSelect T="Guid" @bind-Value="_model.AccountDefinitionId" Variant="Variant.Outlined" Label="Код определения счёта" ToStringFunc="@(id => GetAccountDefinitionCode(id))" Required="@_isCreate" RequiredError="Выберите определение счёта">
                        @foreach (var a in _accountDefinitions)
                        {
                            <MudSelectItem T="Guid" Value="@a.Id">@a.Code</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" md="5"><MudText Typo="Typo.body2" Class="d-flex align-center" Style="height: 56px;">Название <span class="text-error">*</span></MudText></MudItem>
                <MudItem xs="12" md="7">
                    <MudTextField @bind-Value="_model.Name" Variant="Variant.Outlined" Required="true" RequiredError="Введите название" Immediate="true" />
                </MudItem>

                <MudItem xs="12" md="5"><MudText Typo="Typo.body2" Class="d-flex align-center" Style="height: 56px;">ProviderServiceId (код)</MudText></MudItem>
                <MudItem xs="12" md="7">
                    <MudTextField @bind-Value="_model.ProviderServiceId" Variant="Variant.Outlined" Immediate="true" Placeholder="Код услуги у провайдера" />
                </MudItem>

                <MudItem xs="12" Style="overflow: hidden; max-width: 100%;">
                    <MudText Typo="Typo.subtitle2" GutterBottom="true">Требуемые поля (параметры услуги)</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Параметры из справочника ParamDefinition и их обязательность для этой услуги (таблица ServiceParamDefinition).</MudText>
                </MudItem>
                <MudItem xs="12" Style="overflow: hidden; max-width: 100%;">
                    <div style="overflow-x: auto; max-width: 100%;">
                        <MudTable T="ServiceParamDefinitionDto" Items="_model.Parameters" Dense="true" Hover="true" Breakpoint="Breakpoint.Sm" Style="max-height: 220px; min-width: 0;">
                            <HeaderContent>
                                <MudTh>Параметр (код / название)</MudTh>
                                <MudTh Style="width: 140px;">Обязательный</MudTh>
                                <MudTh Style="width: 56px;"></MudTh>
                            </HeaderContent>
                            <RowTemplate Context="paramRow">
                                <MudTd DataLabel="Параметр" Style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="@ParameterDisplay(paramRow.ParameterId)">@ParameterDisplay(paramRow.ParameterId)</MudTd>
                                <MudTd DataLabel="Обязательный">
                                    <MudSwitch @bind-Value="paramRow.Required" Color="Color.Primary" />
                                </MudTd>
                                <MudTd DataLabel="">
                                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error" OnClick="@(() => RemoveParameter(paramRow))" title="Удалить" />
                                </MudTd>
                            </RowTemplate>
                        </MudTable>
                    </div>
                    <MudStack Row="true" Class="mt-2" Spacing="2" AlignItems="AlignItems.Center" Style="max-width: 100%; flex-wrap: wrap;">
                        <div style="flex: 1; min-width: 0; max-width: 100%;">
                            <MudSelect T="string" @bind-Value="_newParamId" Variant="Variant.Outlined" Label="Добавить параметр"
                                       Clearable="true" Dense="true" FullWidth="true" Class="service-param-select">
                                @foreach (var p in _availableParameters)
                                {
                                    <MudSelectItem T="string" Value="@p.Id">@(p.Code) — @(p.Name ?? p.Id)</MudSelectItem>
                                }
                            </MudSelect>
                        </div>
                        <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="AddParameter" Disabled="string.IsNullOrEmpty(_newParamId)" Style="flex-shrink: 0;">
                            Добавить
                        </MudButton>
                    </MudStack>
                </MudItem>

                @if (!string.IsNullOrEmpty(_error))
                {
                    <MudItem xs="12"><MudAlert Severity="Severity.Error">@_error</MudAlert></MudItem>
                }
                <MudItem xs="12">
                    <MudStack Row="true" Justify="Justify.FlexEnd" Spacing="2">
                        <MudButton OnClick="Cancel">Отмена</MudButton>
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="_sending">
                            @(_sending ? "Сохранение…" : "Сохранить")
                        </MudButton>
                    </MudStack>
                </MudItem>
            </MudGrid>
            </EditForm>
        </div>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public ServiceAdminDto? Model { get; set; }
    [Parameter] public bool IsCreate { get; set; }

    private ServiceAdminDto _model = null!;
    private bool _isCreate;
    private bool _sending;
    private string? _error;
    private List<ProviderAdminDto> _providers = new();
    private List<AccountDefinitionAdminDto> _accountDefinitions = new();
    private List<ParameterAdminDto> _allParameters = new();
    private string? _newParamId;

    private IEnumerable<ParameterAdminDto> _availableParameters =>
        _allParameters.Where(p => !_model.Parameters?.Any(x => x.ParameterId == p.Id) ?? true);

    protected override async Task OnInitializedAsync()
    {
        _isCreate = IsCreate;
        if (_isCreate)
        {
            _model = new ServiceAdminDto
            {
                Id = "",
                ProviderId = "",
                ProviderServiceId = "",
                Name = "",
                AllowedCurrencies = Array.Empty<string>(),
                MinAmountMinor = 10,
                MaxAmountMinor = 10_000_000,
                AccountDefinitionId = Guid.Empty,
                Parameters = new List<ServiceParamDefinitionDto>()
            };
        }
        else
        {
            _model = Model ?? new ServiceAdminDto();
            if (_model.Parameters == null)
                _model.Parameters = new List<ServiceParamDefinitionDto>();
        }
        try
        {
            var providersResult = await ProvidersApi.GetPagedAsync(1, 500);
            _providers = providersResult.Items ?? new List<ProviderAdminDto>();
        }
        catch (Exception ex)
        {
            _error = $"Не удалось загрузить провайдеров: {ex.Message}";
        }
        try
        {
            _accountDefinitions = await AccountDefinitionsApi.GetAllAsync();
        }
        catch (Exception ex)
        {
            _error = string.IsNullOrEmpty(_error) ? $"Не удалось загрузить определения счёта: {ex.Message}" : _error + " " + ex.Message;
        }
        try
        {
            var paramsResult = await ParametersApi.GetPagedAsync(1, 500);
            _allParameters = paramsResult.Items ?? new List<ParameterAdminDto>();
        }
        catch
        {
            _allParameters = new List<ParameterAdminDto>();
        }
    }

    private string ParameterDisplay(string parameterId)
    {
        if (string.IsNullOrEmpty(parameterId)) return "—";
        var p = _allParameters.FirstOrDefault(x => x.Id == parameterId);
        return p != null ? $"{p.Code} — {p.Name ?? p.Id}" : parameterId;
    }

    private void AddParameter()
    {
        if (string.IsNullOrEmpty(_newParamId)) return;
        if (_model.Parameters == null) _model.Parameters = new List<ServiceParamDefinitionDto>();
        if (_model.Parameters.Any(x => x.ParameterId == _newParamId)) return;
        _model.Parameters.Add(new ServiceParamDefinitionDto { ParameterId = _newParamId, Required = true });
        _newParamId = null;
        StateHasChanged();
    }

    private void RemoveParameter(ServiceParamDefinitionDto item)
    {
        _model.Parameters?.Remove(item);
        StateHasChanged();
    }

    private string GetAccountDefinitionCode(Guid id)
    {
        if (id == Guid.Empty) return "";
        var a = _accountDefinitions.FirstOrDefault(x => x.Id == id);
        return a?.Code ?? id.ToString();
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        _error = null;
        _sending = true;
        StateHasChanged();
        try
        {
            if (_isCreate)
            {
                var (success, err) = await Api.CreateAsync(_model);
                if (success)
                {
                    Snackbar.Add("Услуга создана. Id присвоен на сервере (9-значный).", Severity.Success);
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                    _error = err ?? "Ошибка сохранения";
            }
            else
            {
                var (success, err) = await Api.UpdateAsync(_model.Id, _model);
                if (success)
                {
                    Snackbar.Add("Услуга обновлена.", Severity.Success);
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                    _error = err ?? "Ошибка сохранения";
            }
        }
        finally
        {
            _sending = false;
            StateHasChanged();
        }
    }
}
