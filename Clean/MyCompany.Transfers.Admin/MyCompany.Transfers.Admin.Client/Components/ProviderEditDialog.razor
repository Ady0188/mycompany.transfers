@using MudBlazor
@using MyCompany.Transfers.Admin.Client.Models
@using MyCompany.Transfers.Admin.Client.Services
@inject IProvidersApiService Api
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <EditForm Model="_model" OnValidSubmit="Submit">
            <MudStack Spacing="3">
                <MudTextField @bind-Value="_model.Id" Label="Id" Variant="Variant.Outlined" Required="true" RequiredError="Введите Id"
                              ReadOnly="!_isCreate" Immediate="true" />
                <MudTextField @bind-Value="_model.Account" Label="Счёт" Variant="Variant.Outlined" Required="true" RequiredError="Введите счёт" Immediate="true" />
                <MudTextField @bind-Value="_model.Name" Label="Название" Variant="Variant.Outlined" Immediate="true" />
                <MudTextField @bind-Value="_model.BaseUrl" Label="Base URL" Variant="Variant.Outlined" Immediate="true" />
                <MudNumericField @bind-Value="_model.TimeoutSeconds" Label="Таймаут (сек)" Variant="Variant.Outlined" Min="1" Max="300" Immediate="true" />
                <MudSelect T="int" @bind-Value="_model.AuthType" Label="Тип авторизации" Variant="Variant.Outlined">
                    <MudSelectItem T="int" Value="0">None</MudSelectItem>
                    <MudSelectItem T="int" Value="1">Basic</MudSelectItem>
                    <MudSelectItem T="int" Value="2">Bearer</MudSelectItem>
                    <MudSelectItem T="int" Value="3">Hamac</MudSelectItem>
                    <MudSelectItem T="int" Value="4">Custom</MudSelectItem>
                </MudSelect>
                <MudTextField @bind-Value="_model.SettingsJson" Label="Настройки (JSON)" Variant="Variant.Outlined" Lines="2" Immediate="true" />
                <MudSwitch @bind-Value="_model.IsEnabled" Label="Включён" Color="Color.Primary" />
                <MudNumericField @bind-Value="_model.FeePermille" Label="Комиссия (промилле)" Variant="Variant.Outlined" Min="0" Max="10000" Immediate="true" />
                @if (!string.IsNullOrEmpty(_error))
                {
                    <MudAlert Severity="Severity.Error">@_error</MudAlert>
                }
                <MudStack Row="true" Justify="Justify.FlexEnd" Spacing="2">
                    <MudButton OnClick="Cancel">Отмена</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="_sending">
                        @(_sending ? "Сохранение…" : "Сохранить")
                    </MudButton>
                </MudStack>
            </MudStack>
        </EditForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public ProviderAdminDto Model { get; set; } = null!;
    [Parameter] public bool IsCreate { get; set; }

    private ProviderAdminDto _model = null!;
    private bool _isCreate;
    private bool _sending;
    private string? _error;

    protected override void OnInitialized()
    {
        _model = new ProviderAdminDto
        {
            Id = Model.Id,
            Account = Model.Account ?? "",
            Name = Model.Name ?? "",
            BaseUrl = Model.BaseUrl ?? "",
            TimeoutSeconds = Model.TimeoutSeconds,
            AuthType = Model.AuthType,
            SettingsJson = Model.SettingsJson ?? "{}",
            IsEnabled = Model.IsEnabled,
            IsOnline = Model.IsOnline,
            FeePermille = Model.FeePermille
        };
        _isCreate = IsCreate;
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        _error = null;
        _sending = true;
        StateHasChanged();
        try
        {
            var (success, err) = _isCreate
                ? await Api.CreateAsync(_model)
                : await Api.UpdateAsync(_model.Id, _model);
            if (success)
            {
                Snackbar.Add(_isCreate ? "Провайдер создан." : "Провайдер обновлён.", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                _error = err ?? "Ошибка сохранения";
            }
        }
        finally
        {
            _sending = false;
            StateHasChanged();
        }
    }
}
