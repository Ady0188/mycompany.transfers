@using MudBlazor
@using MyCompany.Transfers.Admin.Client.Services
@inject ITerminalsApiService Api
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Отправить данные терминала на почту</MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Spacing="3">
            @if (_showPasswordDialog)
            {
                <MudAlert Severity="Severity.Info" Class="mb-2">Пароль для архива показывается один раз. Передайте его партнёру другим каналом (Telegram, WhatsApp, по телефону).</MudAlert>
                <MudTextField Label="Пароль для архива" Value="@_archivePassword" ReadOnly="true" Variant="Variant.Outlined" InputType="InputType.Text" />
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CopyPasswordAndClose" StartIcon="@Icons.Material.Filled.ContentCopy">Скопировать и закрыть</MudButton>
            }
            else
            {
                <MudTextField @bind-Value="_toEmail" Label="Кому" Variant="Variant.Outlined" Required="true" RequiredError="Укажите адрес почты" />
                <MudTextField @bind-Value="_subject" Label="Тема (необязательно)" Variant="Variant.Outlined" />
                <MudTextField @bind-Value="_body" Label="Текст письма" Variant="Variant.Outlined" Lines="6" />
                @if (!string.IsNullOrEmpty(_error))
                {
                    <MudAlert Severity="Severity.Error">@_error</MudAlert>
                }
            }
        </MudStack>
    </DialogContent>
    <DialogActions>
        @if (!_showPasswordDialog)
        {
            <MudButton OnClick="Cancel">Отмена</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Send" Disabled="_sending">
                @(_sending ? "Отправка…" : "Отправить")
            </MudButton>
        }
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string TerminalId { get; set; } = "";
    [Parameter] public string? TerminalName { get; set; }
    [Parameter] public string? PartnerEmail { get; set; }

    private string _toEmail = "";
    private string _subject = "";
    private string _body = "";
    private string? _archivePassword;
    private bool _sending;
    private bool _showPasswordDialog;
    private string? _error;

    private const string DefaultBody = "Здравствуйте.\n\nВо вложении — зашифрованный архив с данными терминала для интеграции. Пароль для открытия архива мы передадим вам отдельно (по Telegram, WhatsApp или по телефону). Сохраните архив в надёжном месте.\n\nС уважением,\nКоманда компании.";

    protected override void OnInitialized()
    {
        _toEmail = PartnerEmail?.Trim() ?? "";
        _subject = string.IsNullOrWhiteSpace(TerminalName) ? $"Данные терминала {TerminalId}" : $"Данные терминала {TerminalName} ({TerminalId})";
        _body = DefaultBody;
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task CopyPasswordAndClose()
    {
        if (!string.IsNullOrEmpty(_archivePassword))
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", _archivePassword);
                Snackbar.Add("Пароль скопирован в буфер обмена.", Severity.Success);
            }
            catch
            {
                Snackbar.Add("Скопируйте пароль вручную.", Severity.Info);
            }
        }
        MudDialog.Close(DialogResult.Ok(true));
    }

    private async Task Send()
    {
        _error = null;
        if (string.IsNullOrWhiteSpace(_toEmail))
        {
            _error = "Укажите адрес получателя.";
            return;
        }
        _sending = true;
        StateHasChanged();
        try
        {
            var (success, err, archivePassword) = await Api.SendCredentialsAsync(TerminalId, _toEmail.Trim(), _body ?? "", string.IsNullOrWhiteSpace(_subject) ? null : _subject.Trim());
            if (success)
            {
                Snackbar.Add("Письмо отправлено.", Severity.Success);
                _archivePassword = archivePassword;
                if (!string.IsNullOrEmpty(archivePassword))
                    _showPasswordDialog = true;
                else
                    MudDialog.Close(DialogResult.Ok(true));
            }
            else
                _error = err ?? "Ошибка отправки";
        }
        finally
        {
            _sending = false;
            StateHasChanged();
        }
    }
}
